<tr>
    <td><%= order.id %></td>
    <td><%= order.email %></td>
    <td><%= order.status %></td>
    <td><%= order.total %></td>
    <td>
    <%# Action to SHOW EDIT DELETE %>
    <%# SHOW  %>
    <%= link_to "Show", {controller: "orders", action: "show", id: order}, class: "btn btn-success" %>
    <%# EDIT  %>
    <%= link_to "Edit", {controller: "orders", action: "edit", id: order}, class: "btn btn-warning" %>
    <%# DELETE %>
    <%= button_to "Delete", order, method: :delete, form_class: "btn btn-danger" %>
  </td>
</tr>