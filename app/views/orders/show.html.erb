                    </tr>
                  </thead>
                  <tbody>
                    <%= render "show_order", order: @order %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <div class="mx-3 my-2">
