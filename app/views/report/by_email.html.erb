<!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Form Pengisian Laporan berdasarkan email</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <div class="card-body">
                <div class="form-group">
                <%= form_with url: "/reports/detail/by_email", method: :get do |form| %>
                    <%= form.label :email %>
                    <%= form.email_field :email, class: "form-control" %>
                    <%= form.submit "Search" %>
                <% end %>

                </div>
              </div>
            </div>
            <!-- /.card -->
          </div>
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>